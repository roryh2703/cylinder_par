    {
        type wall;
        faces
        ((8 11 10 9) (8 12 15 11) (12 8 9 13) (9 10 14 13) (11 15 14 10));
    }
interface
    {
        type wall;
        faces
        ((5 4 12 13) (5 13 14 6) (6 14 15 7) (7 15 12 4));
    }


